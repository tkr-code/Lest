{% import "macros/link.html.twig" as link %}
{% macro order(order) %}
	{% if order.state == 'waiting' or order.state == 'in progress' %}
		<a data-toggle="tooltip" data-placement="bottom" data-id="{{order.id}}" title="Annuller la commande" href="{{ path('main_edit_order_state',{id:order.id}) }}" class="text-danger js-order-canceled">Cancel</a>
	{% endif %}
{% endmacro %}
