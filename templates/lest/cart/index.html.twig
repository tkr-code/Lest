{% block main %}
<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">{{'Shopping Cart'|trans}}<span>{{'Shop'|trans}}</span>
            </h1>
        </div>
        <!-- End .container -->
    </div>
    <!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('home') }}">{{'Home'|trans}}</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('articles') }}">{{'Shop'|trans}}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{'Shopping Cart'|trans}}</li>
            </ol>
        </div>
        <!-- End .container -->
    </nav>
    <!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="cart">
            <div class="container">
                {% include "include/_alerte.html.twig" %}
                {% if app.request.session.get('panier') %}
