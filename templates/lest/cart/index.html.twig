                                                    <label class="custom-control-label" for="standart-shipping">Votre
                                                        adresse:</label>
                                                </div>
                                                <!-- End .custom-control -->
                                            </td>
                                            <td>1 500
                                                {{ site.current }}</td>
                                        </tr>
                                        <!-- End .summary-shipping-row -->

                                        <tr class="summary-shipping-estimate">
                                            <td>Estimate for Your Country<br>
                                                <a href="dashboard.html">Change address</a>
                                            </td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <!-- End .summary-shipping-estimate -->

                                        <tr class="summary-total">
                                            <td>Total:</td>
                                            <td>
                                            {% if app.request.session.get('shipping') %}
                                                <span class="text-danger" class="total"> 
                                                    {{ (total + delivery.shippingAmount.amount)|number_format(0,'.',' ') }} {{ site.current }} 
                                                </span>
                                                {% else %}
                                                <span class="text-danger total">
                                                    {{ total|number_format(0,'.',' ' ) ~ ' '  ~ site.current }}
                                                </span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <!-- End .summary-total -->
