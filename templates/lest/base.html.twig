                                <ul class="widget-list">
                                    <li>
                                        <a href="{{ path('service') }}">{{'Our Services'|trans}}</a>
                                    </li>
                                    <li>
                                        <a href="#">{{'How to shop on Lest'|trans}}</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('faq') }}">FAQ</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('contact') }}">Contact us</a>
                                    </li>
                                </ul>
                                <!-- End .widget-list -->
                            </div>
                            <!-- End .widget -->
                        </div>
                        <!-- End .col-sm-6 col-lg-3 -->

                        <div class="col-sm-6 col-lg-3">
                            <div class="widget">
                                <h4 class="widget-title">Customer Service</h4>
                                <!-- End .widget-title -->

                                <ul class="widget-list">
                                    <li>
                                        <a href="#">{{'Payment Methods'|trans}}</a>
                                    </li>
                                    <li>
                                        <a href="{{ asset("doc/Conditions générales d'utilisation.pdf") }}">Terms and conditions</a>
                                    </li>
                                  
                                </ul>
                                <!-- End .widget-list -->
                            </div>
                            <!-- End .widget -->
                        </div>
                        <!-- End .col-sm-6 col-lg-3 -->

                        <div class="col-sm-6 col-lg-3">
                            <div class="widget">
                                <h4 class="widget-title">My Account</h4>
                                <!-- End .widget-title -->

                                <ul class="widget-list">
                                    <li>
                                        <a href="{{ path('app_register') }}">Sign In</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('cart_index') }}">View Cart</a>
                                    </li>
                                    {% if is_granted('ROLE_CLIENT') %}
                                    <li>
                                        <a href="{{ path('favoris_index') }}">My Wishlist</a>
                                    </li>
                                    {% endif %}
                                    <li>
                                        <a href="{{ path('track_index') }}">Track My Order</a>
                                    </li>
                                </ul>
                                <!-- End .widget-list -->
                            </div>
                            <!-- End .widget -->
                        </div>
                        <!-- End .col-sm-6 col-lg-3 -->
                    </div>
                    <!-- End .row -->
                </div>
                <!-- End .container -->
            </div>
            <!-- End .footer-middle -->

            <div class="footer-bottom">
                <div class="container">
                    <p class="footer-copyright">Copyright © 2022 - <span id="year"></span> LEST. All Rights Reserved.</p>
                    <!-- End .footer-copyright -->
                </div>
                <!-- End .container -->
            </div>
            <!-- End .footer-bottom -->
        </footer>
        <!-- End .footer -->
 {% endblock %}
    </div>
    <!-- End .page-wrapper -->
