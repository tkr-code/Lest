                                        <li>
                                            <a href="{{ path('order_index') }}">Commande</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('article_index') }}">Produits</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('admin_client_index') }}">Clients</a>
                                        </li>
                                        <li>
                                            <a id="btn-logout" href="#">{{'Log out'|trans}}</a>
                                        </li>
                                    </ul>
                                </li>
                                {% endif %}

                            </ul>
                            <!-- End .menu -->
                        </nav>
                        <!-- End .main-nav -->
                    </div>
                    <!-- End .header-center -->
                </div>
                <!-- End .container -->
            </div>
            <!-- End .header-bottom -->
        </header>
        <!-- End .header -->
        {% endblock %} 
        {% block main %}{% endblock %} 
        <div class="container">
                <hr class="mt-5 mb-0">
            </div>
        {% block footer %} 
            
        <footer class="footer">
            <div class="footer-middle">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-lg-3">
                            <div class="widget widget-about">
