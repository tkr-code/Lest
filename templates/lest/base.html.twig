    {% block head %}{% endblock %}
</head>
<body>
    <div class="js-loader js-loader-hide">
        <div class="text-center js-loader-content">
            <div class="spinner-border d-inline-block" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <p class="js-loader-text">Chargement...</p>
        </div>
    </div>
    <div class="page-wrapper">
        {% block header %}
        <header class="header header-intro-clearance header-3">
            <div class="header-top">
                <div class="container">
                    <div class="header-left">
                        <a href="tel:#">
                            <i class="icon-phone"></i> {{'Call'|trans}}: {{ site.phone_number_2 }}</a>
                    </div>
                    <!-- End .header-left -->

                    <div class="header-right">
                        <ul class="top-menu">
                            <li>
                                <a href="#">Liens</a>
                                <ul>
                                    <li>
                                        <div class="header-dropdown">
                                            <a href="#">{{app.request.locale}}</a>
                                            <div class="header-menu">
                                                <ul>
                                                    {% for item in locales %} {% if item != app.request.locale %}
                                                    <li>
                                                        <a href="{{ path('lang',{ locale: item }) }}">{{item}}</a>
                                                    </li>
                                                    {% endif %} {% endfor %}
                                                </ul>
                                            </div>
                                            <!-- End .header-menu -->
                                        </div>
                                    </li>
                                    {% if not is_granted('ROLE_CLIENT') %}
                                    <li>
                                        <a href="#signin-modal" data-toggle="modal">Sign in / Sign up</a>
                                    </li>
                                    {% endif %}
                                </ul>
                            </li>
                        </ul>
                        <!-- End .top-menu -->
                    </div>
                    <!-- End .header-right -->
                </div>
                <!-- End .container -->
            </div>
            <!-- End .header-top -->

            <div class="header-middle">
                <div class="container">
                    <div class="header-left">
                        <button class="mobile-menu-toggler">
							<span class="sr-only">Toggle mobile menu</span>
							<i class="icon-bars"></i>
						</button>

                        <a href="{{ path('home') }}" class="logo">
                            <img src="{{ asset('img/icons/lest-jaune.png') }}" alt="Lest Logo" width="105" height="25">
                        </a>
                    </div>
                    <!-- End .header-left -->

                    <div class="header-center">
                        <div class="header-search header-search-extended header-search-visible d-none d-lg-block">
                            <a href="#" class="search-toggle" role="button">
                                <i class="icon-search"></i>
                            </a>
                            <form action="{{ path('articles') }}" method="get">
                                <div class="header-search-wrapper search-wrapper-wide">
                                    <label for="q" class="sr-only">Search</label>
                                    <button class="btn btn-primary" type="submit">
										<i class="icon-search"></i>
									</button>
                                    <input type="search" class="form-control" name="mots" id="mots" placeholder="Search product ..." value="{{ app.request.get('mots') }}" required>
                                </div>
                                <!-- End .header-search-wrapper -->
                            </form>
                        </div>
                        <!-- End .header-search -->
                    </div>

                    <div class="header-right">
                        <div class="wishlist">
                            {% if is_granted('ROLE_CLIENT') %}
                            <a href="{{ path('favoris_index') }}" title="Wishlist">
                                <div class="icon">
                                    <i class="icon-heart-o"></i>
                                    <span class="wishlist-count badge">{{ app.user.favoris|length}}
									</span>
                                </div>
                                <p>{{'Wishlist'|trans}}</p>
                            </a>
                            {% else %}
                            <a href="#" class="js-favoris-login" title="Wishlist">
                                <div class="icon">
                                    <i class="icon-heart-o"></i>
                                    <span class="wishlist-count badge">0</span>
                                </div>
                                <p>{{'Wishlist'|trans}}</p>
                            </a>
                            {% endif %}
